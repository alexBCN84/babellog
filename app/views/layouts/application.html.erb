<!DOCTYPE html>
<html>
  <head>
    <title>Babellog</title>
    <!-- link to Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <!--/link to bootstrap -->

		<!-- font awesome -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
		<!--/font awesome -->

    <!-- link to Google fonts -->
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
		<!--/link to Google fonts -->

		<!-- link to javascript -->
		<%= javascript_include_tag 'application' %>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
		<!--/link to javascript -->

		<!--favicon -->
		<%= favicon_link_tag 'favicon.ico' %>
		<!--/favicon -->

		<!-- responsive for viewports -->
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!--/responsive for viewports -->
    <%= csrf_meta_tags %>
		<!-- turbolinks -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--/turbolinks -->
  </head>

  <body>
  	<div id="wrap">
  		<!-- ==================== -->
  		<!-- Navigation comes now -->
  		<!-- ==================== -->
  		<!-- Collect the nav links, forms, and other content for toggling -->
			<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
      	<div class="container-fluid">
        	<!-- Brand and toggle get grouped for better mobile display -->
        	<div class="navbar-header">
          	<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            	<span class="sr-only">Toggle navigation</span>
            	<span class="icon-bar"></span>
            	<span class="icon-bar"></span>
            	<span class="icon-bar"></span>
          	</button>
          	<a class="navbar-brand brand page-scroll" href="#page-top"><span class="logo">Babellog</span>
          	</a> 
        	</div> 
        	<!-- /.nav-header -->

        	<!-- Collect the nav links, forms, and other content for toggling -->
        	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          	<ul class="nav navbar-nav navbar-right">
            	<li>
              	<a href="#">Home</a>
            	</li>
            	<li>
            		<a href="#">Blog</a>
            	</li>
            	<li>
            		<a href="#">CEFR levels</a>
            	</li>
            	<li>
              	<a href="#">About</a>
            	</li>
            	<li>
            		<a href="#">Sign up</a>
            	</li>
            	<li>
            		<a href="#">Login</a>
            	</li>
          	</ul>
        	</div>
        	<!-- /.navbar-collapse -->
      	</div>
      	<!-- /.container-fluid -->
    	</nav>
  		<!-- /.navbar -->
    	<!-- /////////////// -->
    	<!-- Navigation ends -->
    	<!-- /////////////// -->

    	<!-- alerts and notices -->

    	<!--/.alerts and notices -->
			<div clas="container">
				<div class="row">
					<div id="central-content" class="col-md-10">
						<%= yield %>
					</div>
					<!--/#central content -->
					<div id="right-sidebar" class="col-md-2">
						<div class="sidebar-nav-fixed">
							<div id="networking" class="center">
								<a href="#"><i class="fa fa-facebook-square"></i></a>
								<a href="#"><i class="fa fa-twitter-square"></i></a>
								<a href="#"><i class="fa fa-google-plus-square"></i></a>
								<a href="#"><i class="fa fa-linkedin-square"></i></a>
								<a href="#"><i class="fa fa-tumblr-square"></i></a>
								<a href="#"><i class="fa fa-delicious"></i></a>
							</div>						
							<div class="well article-search">
								<ul class="nav">
									<li class="nav-header">Search Articles</li>
									<li><a href="#">CEFR level</a></li>
									<li><a href="#">Language</a></li>
									<li><a href="#">Topic</a></li>
									<li><a href="#">Type of article</a></li>
									<li><a href="#" class="btn btn-default">Search</a></li>
								</ul>	
							</div>
							<!--/.well -->
						</div>
						<!--/. sidebar nav fixed -->
					</div>
					<!--/#right sidebar -->
				</div>
			</div>
					
    </div>
    <!--/#wrap-->
    <footer>
    	<div class="container copyright">
    		&copy; 2016 Babellog
    	</div>
    </footer>
  </body>
</html>
